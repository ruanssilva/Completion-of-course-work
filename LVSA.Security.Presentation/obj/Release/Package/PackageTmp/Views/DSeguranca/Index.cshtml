                                <td>@(u.TipoUsuario == null ? "Normal" : u.TipoUsuario.Nome)</td>
                                <td>
                                    <a href="@Url.Action("Details", "DSeguranca", new { id = u.Id })" title="Visualizar"><i class="fa fa-eye"></i></a>
