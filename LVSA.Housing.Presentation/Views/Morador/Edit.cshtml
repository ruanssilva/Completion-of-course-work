@model LVSA.Housing.Application.ViewModels.MoradorViewModel

@{
    ViewBag.Title = "Morador";
    ViewBag.Description = "Editar morador";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.PessoaId)
        @Html.HiddenFor(model => model.MoradiaId)

        <div class="profile-user-info profile-user-info-striped">
            <div class="profile-info-row">
                <div class="profile-info-name">
                    @Html.DisplayNameFor(model => model.PessoaId)
                </div>
                <div class="profile-info-value">
                    @Model.Pessoa.Nome
                </div>
            </div>
            <div class="profile-info-row">
                <div class="profile-info-name">
                    @Html.DisplayNameFor(model => model.MoradiaId)
                </div>
                <div class="profile-info-value">
                    @Model.Moradia.Nome
                </div>
            </div>
        </div>

        <div class="space-6"></div>

        <div class="form-group">
            @Html.LabelFor(model => model.ResponsavelFinanceiro, new { @class = "control-label col-md-2" })
            <div class="col-md-10">


                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(model => model.ResponsavelFinanceiro, true, htmlAttributes: new { @id = "optionsradio-true", @class = "ace" })


                        <span class="lbl"> Sim</span>
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(model => model.ResponsavelFinanceiro, false, htmlAttributes: new { @id = "optionsradio-false", @class = "ace" })


                        <span class="lbl"> Não</span>
                    </label>
                </div><br />
                @Html.ValidationMessageFor(model => model.ResponsavelFinanceiro)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Ativo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">


                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(model => model.Ativo, true, htmlAttributes: new { @id = "optionsradio-true", @class = "ace" })


                        <span class="lbl"> Sim</span>
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(model => model.Ativo, false, htmlAttributes: new { @id = "optionsradio-false", @class = "ace" })


                        <span class="lbl"> Não</span>
                    </label>
                </div><br />
                @Html.ValidationMessageFor(model => model.Ativo)
            </div>
        </div>

        <div class="form-actions no-color">
            <div>
                <button type="submit" class="btn btn-primary" title="Salvar">Salvar <i class="glyphicon glyphicon-floppy-disk"></i></button> |
                <a href="@Url.Action("Index")" class="btn btn-default" title="Ir para moradores">Ir para moradores <i class="glyphicon glyphicon-arrow-left"></i></a>
            </div>
        </div>
    </div>
}