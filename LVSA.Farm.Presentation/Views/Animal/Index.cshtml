@model IEnumerable<LVSA.Farm.Application.ViewModels.AnimalViewModel>

@{
    ViewBag.Title = "Animal";
    ViewBag.Description = "Lista de animais";
}

<div class="pull-left">
    <a href="@Url.Action("Create")" class="btn btn-white btn-success btn-bold" title="Novo">Novo <i class="fa fa-plus"></i></a>
</div>

<div class="clearfix">
    <div class="pull-right tableTools-container"></div>
</div>

<div class="table-header">
    Resultados para animais
</div>
<table class="table datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RacaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(item.Raca != null ? item.Raca.Nome : "")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @(item.Nascimento != null ? item.Nascimento.Value.ToString("dd/MM/yyyy") : "")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>
                <td class="text-right">
                    <div class="hidden-sm hidden-xs action-buttons">

                        @if (item.TipoAnimal.Codigo == "VL")
                        {
                            <a class="pink" href="@Url.Action("Create","Ordenha", new { id= item.Id })" title="Ordenhar">
                                <i class="ace-icon fa fa-hand-rock-o bigger-130"></i>
                            </a>
                        }

                        <a class="blue" href="@Url.Action("Details", new { id= item.Id })" title="Visualizar">
                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                        </a>

                        <a class="green" href="@Url.Action("Edit", new { id= item.Id })" title="Editar">
                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                        </a>

                        <a class="red" href="@Url.Action("Delete", new { id= item.Id })" title="Deletar">
                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                        </a>
                    </div>

                    <div class="hidden-md hidden-lg">
                        <div class="inline pos-rel">
                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                            </button>

                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">


                                @if (item.TipoAnimal.Codigo == "VL")
                                {
                                    <li>
                                        <a href="@Url.Action("Create","Ordenha", new { id= item.Id })" class="tooltip-info" data-rel="tooltip" title="Visualizar">
                                            <span class="pink">
                                                <i class="ace-icon fa fa-hand-rock-o bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>
                                }

                                <li>
                                    <a href="@Url.Action("Details", new { id= item.Id })" class="tooltip-info" data-rel="tooltip" title="Visualizar">
                                        <span class="blue">
                                            <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                        </span>
                                    </a>
                                </li>

                                <li>
                                    <a href="@Url.Action("Edit", new { id= item.Id })" class="tooltip-success" data-rel="tooltip" title="Editar">
                                        <span class="green">
                                            <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                        </span>
                                    </a>
                                </li>

                                <li>
                                    <a href="@Url.Action("Delete", new { id= item.Id })" class="tooltip-error" data-rel="tooltip" title="Deletar">
                                        <span class="red">
                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                        </span>
                                    </a>
                                </li>
                            </ul>


                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
