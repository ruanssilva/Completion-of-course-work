@model IEnumerable<LVSA.Housing.Application.ViewModels.ReuniaoViewModel>

@{
    ViewBag.Title = "Lista de reunião";
}

<div class="page-header">
    <h1>
        Reunião
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Lista de reunião
        </small>
    </h1>
</div><!-- /.page-header -->

<div class="panel panel-default">
    <div class="panel-footer">

        <div class="pull-left">
            <a href="~/Reuniao/Create" class="btn btn-default"><small>Novo</small> <i class="fa fa-asterisk"></i> </a>
        </div>

        <div class="pull-right tableTools-container"></div>

        <div class="clearfix"></div>

    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="main-box clearfix">


            <div class="main-box-body clearfix">
                <table class="table table-hover datatable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Assunto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quando)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Onde)
                            </th>
                            <th class="text-right hidden-print"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Assunto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quando)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Onde)
                                </td>
                                <td class="text-right hidden-print">
                                    <div class="">
                                        <a class="btn btn-link blue" href="~/Reuniao/Details/@item.Id" title="Visualizar">
                                            <i class="icon fa fa-search-plus"></i>
                                        </a>
                                        <a class="btn btn-link green" href="~/Reuniao/Edit/@item.Id" title="Editar">
                                            <i class="icon fa fa-pencil-square-o"></i>
                                        </a>
                                        <a class="btn btn-link red" href="~/Reuniao/Delete/@item.Id" title="Deletar">
                                            <i class="icon fa fa-trash-o"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>