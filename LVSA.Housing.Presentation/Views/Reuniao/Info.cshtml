@model LVSA.Housing.Application.ViewModels.ReuniaoViewModel

@{
    ViewBag.Title = Model.Assunto;
    ViewBag.Description = "Ata da reunião";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="row container">
            <div class="col-md-12 ">
                @(new HtmlString(Model != null ? Model.Ata : ""))
            </div>
        </div>
        <div class="form-actions no-color">
            <div>
                <a href="@Url.Action("Index","Home")" class="btn btn-default" title="Voltar para pagina inicial">Voltar para pagina inicial <i class="glyphicon glyphicon-arrow-left"></i></a>
            </div>
        </div>
    </div>
}