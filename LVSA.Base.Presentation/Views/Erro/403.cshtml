@{
    string serverCDN = System.Web.Configuration.WebConfigurationManager.AppSettings["Address_LVSA.CDN.Presentation"];
    
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<br /><br />

<div class="center">
    <img class="img-responsive" style="width: 400px; height:auto; margin:0 auto;" src="@(serverCDN)/Content/Images/logo_LVSA.png" border="0">
</div>

<br />
<div class="col-xs-12">
    <!-- PAGE CONTENT BEGINS -->
    <!-- #section:pages/error -->
    <div class="">
        <div class="">
            <h1 class="white lighter smaller">
                <span class="white bigger-125">
                    <i class="ace-icon fa fa-random"></i>
                    403
                </span>
                Acesso negado
            </h1>

            <hr>
            <h3 class="lighter smaller white">
                Você não tem permissão
                <i class="ace-icon fa fa-lock icon-animated-wrench bigger-125"></i>
                para este recurso!
            </h3>

            <div class="space"></div>

            <div>
                <h4 class="lighter smaller white">Caso haja um engano, tente um dos seguintes procedimentos:</h4>

                <ul class="list-unstyled spaced inline bigger-110 margin-15 white">
                    <li>
                        <i class="ace-icon fa fa-hand-o-right white"></i>
                        <a href="@Url.Action("Logout","Login")">Sair</a> e entrar na aplicação novamente pode resolver
                    </li>

                    <li>
                        <i class="ace-icon fa fa-hand-o-right white"></i>
                        Entre em contato com administrador do sistema
                    </li>
                </ul>
            </div>

            <hr>
            <div class="space"></div>

            <div class="center">
                <a href="javascript:history.back()" class="btn btn-bold btn-white btn-grey">
                    <i class="ace-icon fa fa-arrow-left"></i>
                    Voltar
                </a>

                <a href="@Url.Action("Index", "Home")" class="btn btn-white btn-bold btn-primary">
                    <i class="ace-icon fa fa-home"></i>
                    Página inicial
                </a>
            </div>
        </div>
    </div>

    <!-- /section:pages/error -->
    <!-- PAGE CONTENT ENDS -->
</div>

@section footer {
    <div class="footer">
        <div class="footer-inner">
            <!-- #section:basics/footer -->
            <div class="footer-content" style="border:none!important; color:#ffffff!important;">
                <span class="smaller-90">
                    © @DateTime.Now.Year - UBEC - União Brasiliense de Educação e Cultura
                </span>
            </div>

            <!-- /section:basics/footer -->
        </div>
    </div>
}

