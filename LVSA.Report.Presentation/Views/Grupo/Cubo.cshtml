@model LVSA.Report.Presentation.ViewModels.GrupoAppViewModel

@{
    ViewBag.Title = "Cubos do grupo";
}

<div class="page-header">
    <h1>
        Grupo
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Cubos do grupo
        </small>
    </h1>
</div><!-- /.page-header -->

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

    </dl>
</div>

@using (Html.BeginForm("Cubo", "Grupo", new { id = Model.Id }, FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="main-box-body clearfix">
                    <br />
                    <div class="row vertical-align">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CategoriaId, htmlAttributes: new { @class = "label-control" })
                                @Html.DropDownListFor(model => model.CategoriaId, new SelectList(ViewBag.CategoriaSet, "Id", "Nome", Model.CategoriaId), "Selecione", htmlAttributes: new { @class = "select2" })
                                @Html.ValidationMessageFor(model => Model.CategoriaId)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Buscar</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

@if (Model.Cubos != null)
{
    using (Html.BeginForm("Cubo", "Grupo", new { id = Model.Id }, FormMethod.Post))
    {           
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box clearfix">


                    <div class="main-box-body clearfix">

                        <br />

                        <table class="table datatable table-hover" data-filter="false" data-pagination="false">
                            <thead>
                                <tr>
                                    <th>
                                        Acesso
                                    </th>
                                    <th>
                                        Cubo
                                    </th>
                                    <th>
                                        Descrição do cubo
                                    </th>
                                    <th class="text-right">

                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @Html.EditorFor(model => model.Cubos)
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-footer">

                <div class="pull-left">
                    <button type="submit" class="btn btn-primary">Salvar <i class="fa fa-save"></i> </button> |
                    <a href="~/Grupo" class="btn btn-default btn-white"><i class="fa fa-arrow-left"></i> Voltar para lista</a>
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
    }
}