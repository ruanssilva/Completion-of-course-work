@model LVSA.Housing.Application.ViewModels.ReuniaoViewModel

@{
    ViewBag.Title = "Deletar reunião";
}

<div class="page-header">
    <h1>
        Reunião
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Deletar reunião
        </small>
    </h1>
</div><!-- /.page-header -->

<div>
    <h4>Atenção! Você realmente deseja deletar esse registro?</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Assunto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Assunto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quando)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quando)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Onde)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Onde)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cancelado)
        </dt>

        <dd>
            @(Model.Cancelado ? "Sim" : "Não")
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="panel panel-default">
            <div class="panel-footer">
                <div class="pull-left">
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i> Deletar</button> |
                    <a href="~/Reuniao" class="btn btn-default btn-white"><i class="fa fa-arrow-left"></i> Voltar para lista</a>
                </div>

                <div class="clearfix">

                </div>
            </div>
        </div>
    }
</div>
