@model LVSA.Noticia.Presentation.ViewModels.NoticiaViewModel

@{
    ViewBag.Title = "Notícia";
    ViewBag.Description = "Deletar notícia";
}

<h4 class="red">Atenção!</h4>
<h5>Deseja realmente deletar esta notícia?</h5>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Subtitulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subtitulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Texto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Texto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Autor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Autor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PublicadoEm)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PublicadoEm)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExpiraEm)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpiraEm)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div>
                <button type="submit" class="btn btn-danger" title="Deletar">Deletar <i class="fa fa-trash-o"></i></button> |
                <a href="~/Noticia" class="btn btn-default" title="Voltar para aplicações">Voltar para notícias <i class="glyphicon glyphicon-arrow-left"></i></a>
            </div>
        </div>
    }
</div>
