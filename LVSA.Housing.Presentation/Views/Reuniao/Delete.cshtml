@model LVSA.Housing.Application.ViewModels.ReuniaoViewModel

@{
    ViewBag.Title = "Reunião";
    ViewBag.Description = "Deletar reunião";
}

<h4 class="red">Atenção!</h4>
<h5>Deseja realmente remover este reunião?</h5>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Assunto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Assunto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quando)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quando)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Onde)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Onde)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cancelado)
        </dt>

        <dd>
            @(Model.Cancelado ? "Sim" : "Não")
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div>
                <button type="submit" class="btn btn-danger" title="Deletar">Deletar <i class="fa fa-trash-o"></i></button> |
                <a href="@Url.Action("Index")" class="btn btn-default" title="Voltar para lista">Voltar para lista <i class="glyphicon glyphicon-arrow-left"></i></a>
            </div>
        </div>
    }
</div>
