        <div class="modal-content">
            <!-- dialog body -->
            <div class="modal-body" style="max-height: 400px; overflow: auto;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Matrícula</th>
                            <th>Usuário</th>
                            <th>Tipo usuário</th>
                            <th></th>
                        </tr>
