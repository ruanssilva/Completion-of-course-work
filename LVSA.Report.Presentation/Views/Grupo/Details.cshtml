@model LVSA.Report.Application.ViewModels.GrupoViewModel

@{
    ViewBag.Title = "Detalhes do grupo";
}

<div class="page-header">
    <h1>
        Grupo
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Detalhes do grupo
        </small>
    </h1>
</div><!-- /.page-header -->

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>

        <dd>
            @(Model.Ativo ? "Sim" : "Não")
        </dd>

    </dl>
</div>
<div class="panel panel-default">
    <div class="panel-footer">
        <div class="pull-left">
            <a href="~/Grupo/Edit/@Model.Id" class="btn btn-warning"><i class="fa fa-pencil"></i> Editar</a> |
            <a href="~/Grupo" class="btn btn-default btn-white"><i class="fa fa-arrow-left"></i> Voltar para lista</a>
        </div>

        <div class="clearfix">

        </div>
    </div>
</div>