<div class="pull-left">
    <a href="javascript:window.history.go(-1);" class="btn btn-warning btn-white"><i class="fa fa-arrow-left"></i> <small>Voltar</small></a>
</div>

<div class="clearfix">
    <div class="pull-right tableTools-container"></div>
</div>



@if (Model.WebGrid != null)
{
    <div class="table-header">
        Resultados para o cubo
    </div>
    <br />
    <div class="container-fluid">
        <div class="hidden">
            @Model.WebGrid.GetHtml(
        columns: Model.WebGridColumns,
                htmlAttributes: new { @id = "report-grid", @class = "hidden table datatable", @data_filter = "false", @data_info = "false", @data_pagination = "false", @data_export_pdf = "false", @data_export_print = "false" }
    )
        </div>
        <div id="gridContainer"></div>
    </div>
}

<br />

@if (Model.WebGraph != null)
{
    <div class="table-header">
        Gráfico para o cubo
    </div>
    <br />
    <div class="container-fluid">
        @Model.WebGraph.GetHtml(
        columns: Model.WebGraphColumns,
        htmlAttributes: new { @id = "report-graph", @class = "hidden" }
    )

        <div id="graphContainer" style="width: 100%; height: 440px;"></div>
    </div>
}


@section styles {
    <link href="~/Content/DevExpress/css/dx.common.css" rel="stylesheet" />
    <link href="~/Content/DevExpress/css/dx.light.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/Content/DevExpress/js/knockout-3.3.0.js"></script>
    <script src="~/Content/DevExpress/js/globalize.min.js"></script>
    <script src="~/Content/DevExpress/js/dx.all.js"></script>
    <script src="~/Content/DevExpress/js/underscore-1.5.1.min.js"></script>
    <script src="~/Content/DevExpress/js/dx.common.js"></script>
}
