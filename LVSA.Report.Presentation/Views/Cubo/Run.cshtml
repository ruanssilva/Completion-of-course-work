@model LVSA.Report.Application.ViewModels.CuboViewModel

@{
    ViewBag.Title = "Rodar cubo";
}

<div class="page-header">
    <h1>
        Cubo
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Rodar cubo
        </small>
    </h1>
</div><!-- /.page-header -->


<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Codigo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ConsultaId)
        @Html.HiddenFor(model => model.InstrucaoId)

        <hr />

        <div class="form-horizontal">
            @Html.EditorFor(model => model.Consulta.Parametros)
        </div>
        
        <br />

        @Html.ValidationSummary()

        <div class="panel panel-default">
            <div class="panel-footer">
                <div class="pull-left">
                    <button type="submit" class="btn btn-danger"><i class="fa fa-play"></i> Executar</button> |
                    <a href="~/Cubo/View" class="btn btn-default btn-white"><i class="fa fa-arrow-left"></i> Voltar para lista</a>
                </div>

                <div class="clearfix">

                </div>
            </div>
        </div>
    }
</div>
